<div class="sign-up">
  <div class="container-sign-up">
    <div class="row">
      <form action="/user/create" method="POST" class="col s12" id="reg-form">

        <div class="row">
          <div class="input-field col s12">
            <input id="name" name="name" type="text" class="validate" required>
            <label for="name">Your Name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="title" name="title" type="text" class="validate" required>
            <label for="title">Your Title</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="email" name="email" type="email" class="validate" required>
            <label for="email">Email Address</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="password" name="password" type="password" class="validate" minlength="6" required>
            <label for="password">Password</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="confirmation" name="confirmation" type="password" class="validate" minlength="6" required>
            <label for="confirmation">Password Confirmation</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <button class="btn btn-large btn-register waves-effect waves-light" type="submit" value="Create Account">Register
              <i class="material-icons right">done</i>
            </button>
          </div>
        </div>

        <input type="hidden" name="_csrf" value="<%= _csrf %>" />

      </form>
    </div>
  </div>
  <a title="Login" class="ngl btn-floating btn-large waves-effect waves-light red"><i class="material-icons">input</i></a>
</div>
